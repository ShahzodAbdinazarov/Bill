<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.add_transaction.AddTransactionDialog">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-40dp"
        app:cardBackgroundColor="@color/bg"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="20dp"
                            app:cardBackgroundColor="@color/medium"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="20dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:text="@string/now"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_filter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/income"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="0dp"
                                    app:strokeWidth="0dp">

                                    <ImageButton
                                        android:id="@+id/ib_income"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:background="?selectableItemBackgroundBorderless"
                                        android:contentDescription="@string/app_name"
                                        android:paddingVertical="6dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/income"
                                        app:tint="#000" />

                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/expense"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="0dp"
                                    app:strokeWidth="0dp">

                                    <ImageButton
                                        android:id="@+id/ib_expense"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:background="?selectableItemBackgroundBorderless"
                                        android:contentDescription="@string/app_name"
                                        android:paddingVertical="6dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/expense"
                                        app:tint="@color/white" />

                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/borrow"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="0dp"
                                    app:strokeWidth="0dp">

                                    <ImageButton
                                        android:id="@+id/ib_borrow"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:background="?selectableItemBackgroundBorderless"
                                        android:contentDescription="@string/app_name"
                                        android:paddingVertical="6dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/borrow"
                                        app:tint="@color/black" />

                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/borrow"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="0dp"
                                    app:strokeWidth="0dp">

                                    <ImageButton
                                        android:id="@+id/ib_borrow_back"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:background="?selectableItemBackgroundBorderless"
                                        android:contentDescription="@string/app_name"
                                        android:paddingVertical="6dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/borrow_back"
                                        app:tint="#000" />

                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/lending"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="0dp"
                                    app:strokeWidth="0dp">

                                    <ImageButton
                                        android:id="@+id/ib_lending"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:background="?selectableItemBackgroundBorderless"
                                        android:contentDescription="@string/app_name"
                                        android:paddingVertical="6dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/lend"
                                        app:tint="@color/white" />

                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/lending"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="0dp"
                                    app:strokeWidth="0dp">

                                    <ImageButton
                                        android:id="@+id/ib_lending_back"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:background="?selectableItemBackgroundBorderless"
                                        android:contentDescription="@string/app_name"
                                        android:paddingVertical="6dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/lend_back"
                                        app:tint="@color/white" />

                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/mv_type"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginHorizontal="20dp"
                                android:visibility="gone"
                                app:cardBackgroundColor="@color/expense"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp">

                                <LinearLayout
                                    android:id="@+id/bn_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="?selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:contentDescription="@string/app_name"
                                        android:paddingVertical="6dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/expense"
                                        app:tint="@color/black" />

                                    <TextView
                                        android:id="@+id/tv_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/income"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/tv_type_error"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:text="@string/type_error"
                                android:textColor="@color/expense"
                                android:textSize="16sp"
                                android:visibility="gone" />

                        </LinearLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="16dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/et_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:autofillHints="amount"
                                    android:background="@color/transparent"
                                    android:hint="@string/summa"
                                    android:inputType="numberDecimal"
                                    android:padding="20dp"
                                    android:textSize="36sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sum"
                                    android:textColor="@color/medium"
                                    android:textSize="18sp" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:minHeight="200dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="16dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <EditText
                                android:id="@+id/et_note"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:autofillHints="amount"
                                android:background="@color/transparent"
                                android:gravity="top"
                                android:hint="@string/note"
                                android:inputType="textCapSentences|textMultiLine"
                                android:padding="20dp"
                                android:textSize="18sp" />

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="70dp"
                    app:cardBackgroundColor="@color/income"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <TextView
                        android:id="@+id/tv_save"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="@string/save"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>